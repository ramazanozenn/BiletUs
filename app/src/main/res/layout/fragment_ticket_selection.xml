<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1D24"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/header_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back_selection"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            app:tint="#B0B0B0" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRICE SELECTION"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_selection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hayko Cepkin Concert"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_selection"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: March 30, 2025\nLocation: HollyStone MuÄŸla\nTime: 9 PM"
        android:textColor="#B0B0B0"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_selection_title"/>

    <TextView
        android:id="@+id/lbl_ticket_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Ticket Type Selection"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_selection_title" />

    <LinearLayout
        android:id="@+id/row_student"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_account_button"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/lbl_ticket_type"
        tools:layout_editor_absoluteX="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Student"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_counter_student"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/bg_filter_chip"
            android:backgroundTint="@color/biletus_pink"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/btn_minus_student"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:text="-"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_qty_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:text="1"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_plus_student"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:text="+"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_price_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="450 TL"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_adult"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_account_button"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/row_student">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Adult"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/layout_counter_adult"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/bg_filter_chip"
            android:backgroundTint="@color/biletus_pink"
            android:gravity="center"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/btn_minus_adult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="-"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"/>

            <TextView
                android:id="@+id/txt_qty_adult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingHorizontal="4dp"/>

            <TextView
                android:id="@+id/btn_plus_adult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_price_adult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="650 TL"
            android:layout_marginStart="12dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_go_payment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/biletus_pink"
        android:text="TOTAL PRICE: 650 TL\nGO TO PAYMENT"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>